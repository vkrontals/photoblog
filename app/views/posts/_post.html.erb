<article class="post" data-id="<%= post.id %>">

  <header class="entry-header">
    <h2 class="entry-title">
      <%= link_to post.title, post, rel: :bookmark %>
    </h2>
  </header>

  <div class="entry-content">
    <p class="entry-thumbnail">

      <%= link_to image_tag(image_host(post.thumbnail.url), alt: (post.thumbnail.alt_txt || post.title)),
                  post,
                  class: 'featured-image' %>
    </p>

    <%= post.content.html_safe %>
  </div>

  <%= render 'shared/components/page_meta',
             page: OpenStruct.new({   publish_date: post.publish_date,
                                      updated_date: post.updated_at,
                                      url: post_path(post),
                                      author: post.author,
                                      terms: post.terms
                                  }) %>
</article>

